generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model todos {
  id    Int    @id @default(autoincrement())
  todo String
  description String
  status String @default("created")
  createdAt          DateTime  @default(now()) 
  updatedAt          DateTime  @updatedAt 
}